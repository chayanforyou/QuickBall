<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/drag_handle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <dev.doubledot.doki.views.DokiContentView
        android:id="@+id/doki_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true"
        app:dokiActiveIconsColor="?attr/colorPrimary"
        app:dokiBackgroundColor="?attr/colorSurfaceContainerLow"
        app:dokiButtonsTextColor="?attr/colorOnSurface"
        app:dokiDividerColor="?attr/colorSurfaceVariant"
        app:dokiInactiveIconsColor="?attr/colorPrimaryContainer"
        app:dokiPrimaryTextColor="?attr/colorOnSurface"
        app:dokiSecondaryTextColor="?attr/colorOnSurfaceVariant" />
</LinearLayout>
