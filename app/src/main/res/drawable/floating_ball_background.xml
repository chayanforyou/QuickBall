<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer light grey circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#7D7D7D" />
            <size
                android:width="40dp"
                android:height="40dp" />
        </shape>
    </item>

    <!-- Inner white ring (donut effect) -->
    <item
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

    <!-- Inner light grey center to create the ring effect -->
    <item
        android:bottom="11dp"
        android:left="11dp"
        android:right="11dp"
        android:top="11dp">
        <shape android:shape="oval">
            <solid android:color="#7D7D7D" />
        </shape>
    </item>

</layer-list>
